<section class="membership-checkout">

  <div class="membership-checkout-card">

    <!-- Intro -->
    <div class="membership-checkout-header">
      <h1>Join the Coffee Overflow Team</h1>
      <p class="muted">
        You're one step away from better coffee, better perks,
        and a community that actually gets it.
      </p>
    </div>

    <!-- Plan Summary -->
    <div class="membership-plan-card">
      <h3>Monthly Membership</h3>
