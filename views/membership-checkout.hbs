    <!-- Payment -->
    <form id="membershipCheckoutForm" class="membership-form">

      <h4>Payment Details</h4>

      <!-- Name -->
      <div class="form-group">
        <label for="cardName">Name on Card</label>
        <input
          id="cardName"
          type="text"
          class="form-control"
          placeholder="Ada Lovelace"
          required
        >
        <small class="form-hint muted">
          The name your bank expects, sadly nicknames don't work here.
        </small>
      </div>

      <!-- Card Number -->
      <div class="form-group">
        <label for="cardNumber">Card Number</label>
        <input
          id="cardNumber"
          type="text"
          class="form-control"
          placeholder="4242 4242 4242 4242"
          inputmode="numeric"
          required
        >
        <small class="form-hint muted">
          Nice card number ğŸ˜„ We promise we won't memorise it.
        </small>
      </div>

      <!-- Expiry + CVC -->
      <div class="form-row">
        <div class="form-group">
          <label for="expiry">Expiry</label>
          <input
            id="expiry"
            type="text"
            class="form-control"
            placeholder="MM/YY"
            required
          >
        </div>

        <div class="form-group">
          <label for="cvc">CVC</label>
          <input
            id="cvc"
            type="text"
            class="form-control"
            placeholder="123"
            inputmode="numeric"
            required
          >
        </div>
      </div>

      <!-- Error -->
      <div id="membershipError" class="alert alert-danger d-none">
        Something went wrong. Please double check your details.
      </div>

      <!-- CTA -->
