<!-- Container -->
<section class="container my-5">

  <!-- Title -->
  <h1>Contact Us</h1>

  <!-- Address -->
  <p class="mt-3">
    Coffee Overflow<br>
    Main Street<br>
    Leitrim Village<br>
    Leitrim, Ireland
  </p>

  <!-- Contact Form -->
  <form class="mt-4">

    <!-- Email Field -->
    <div class="mb-3">
      <label class="form-label" for="contactEmail">Your Email</label>
      <input
        id="contactEmail"
        name="email"
        type="email"
        class="form-control"
        required>
    </div>

    <!-- Message Field -->
    <div class="mb-3">
      <label class="form-label" for="contactMessage">Message</label>
      <textarea
        id="contactMessage"
        name="message"
        class="form-control"
        rows="4"
        required
        minlength="10"
        maxlength="500"></textarea>
    </div>

    <!-- Submit Button -->
    <button class="btn btn-primary">Send Message</button>

  </form>
</section>

<!-- Script -->
<script src="/js/contact.js"></script>
