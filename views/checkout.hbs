<!-- CHECKOUT PAGE -->
<section class="checkout-page">

  <div class="checkout-card">

    <!-- HEADER -->
    <div class="checkout-header">
      <h1>Checkout</h1>
      <p class="checkout-subtitle">
        Almost there, your coffee is just a few keystrokes away â˜•
      </p>
    </div>

    <!-- FORM -->
    <form id="checkoutForm" novalidate>

      <!-- ADDRESS -->
      <div class="checkout-section">
        <h4>Delivery Address</h4>
        <p class="checkout-hint">
          Where should we send the good stuff?
        </p>

        <textarea
          id="address"
          name="address"
          class="form-control"
          rows="3"
          required
          minlength="10"
          maxlength="200"
          placeholder="Street, town, countyâ€¦"></textarea>
      </div>

      <!-- PAYMENT -->
      <div class="checkout-section">
        <h4>Payment Details</h4>
        <p class="checkout-hint">
          Secure, encrypted, and developer approved.
        </p>

        <!-- NAME -->
        <div class="mb-3">
          <label for="cardName" class="form-label">Name on Card</label>
          <input
            id="cardName"
            name="cardName"
            type="text"
            class="form-control"
            required
            minlength="3"
            placeholder="Ada Lovelace">
        </div>

        <!-- CARD NUMBER -->
        <div class="mb-3">
          <label for="cardNumber" class="form-label">Card Number</label>
          <input
            id="cardNumber"
            name="cardNumber"
            class="form-control"
            placeholder="4242 4242 4242 4242"
            required
            inputmode="numeric"
            pattern="\d{16}"
            title="Card number must be exactly 16 digits">
          <small class="form-text">
            Nice card number ðŸ˜„ We promise we won't memorise it.
          </small>
        </div>

        <!-- EXPIRY + CVC -->
        <div class="row">
          <div class="col-6 mb-3">
            <label for="expiry" class="form-label">Expiry</label>
            <input
              id="expiry"
              name="expiry"
              class="form-control"
              placeholder="MM/YY"
              required
              pattern="^(0[1-9]|1[0-2])\/\d{2}$">
          </div>

          <div class="col-6 mb-3">
            <label for="cvc" class="form-label">CVC</label>
            <input
              id="cvc"
              name="cvc"
              class="form-control"
              placeholder="123"
              required
              inputmode="numeric"
              pattern="\d{3}"
              maxlength="3">
          </div>
        </div>
      </div>

      <!-- ERROR -->
      <div id="checkoutError" class="alert alert-danger d-none">
        Something looks off, double check your details and try again.
      </div>

      <!-- SUBMIT -->
      <button class="checkout-submit">
        Submit Payment
      </button>

    </form>

    <!-- SUCCESS -->
    <div id="checkoutSuccess" class="checkout-success d-none">
      <h4>Payment successful ðŸŽ‰</h4>
      <p>
        Your coffee is being prepared.  
        The kettle's already on.
      </p>
    </div>

  </div>
</section>

<script src="/js/checkout.js"></script>
